{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MINISHELL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3D",
            "args": ["sad_face.cub"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
